@import "../libs/Accordeon/MFSAccordeon"
*
	margin 0
	padding 0
[class*="ymaps-2"][class*="-ground-pane"] {
	filter saturate(0.5) contrast(95%) brightness(105%)
}

.MapWrap
	display flex
	justify-content space-between
	height 90vh
#Map, #DescMap
	height 100%
#Map
	width 40%
#DescMap
	width 60%

.DescMap
	&-BredCrambsLink
		font-family: 'Roboto';
		font-size: 14px;
		&_This
			color: #D64B4B;
		&_NotThis
			color #828282
			&:after
				content: '/';
				display: inline-block;
				padding-left: 5px;
				padding-right: 5px;
	&-Header
		height: 80px
		background-color: #F2F2F2
		display: flex;
		align-items: center;
		padding: 0 25px;
		justify-content: space-between;
		order 1
	&-City
		height: 100%
		display: flex;
		align-items: center;
		width: 17%;
	&-CityName
		height: 50%;
		display: flex;
		align-items: center;
		padding-left: 50px;
		border-left: 1px solid #e0e0e0;
		position: relative
		font-family: Roboto;
		font-size: 14px;
		text-decoration-line: underline;
		color: #333333;
		&:before
			content: '';
			display: block;
			background-image: url(ic_room.png);
			top: calc(50% - 9px);
			left: 20px;
			position: absolute;
			width: 18px;
			height: 18px;




.Brand
	padding 10px
	display flex
	align-items center
	&-Logo
		margin-right: 50px
	&-Name
		font-family Rubik
		font-weight 500
		font-size 30px
		letter-spacing 0.05em
		text-transform uppercase
		color #C62828
	&-PhoneSch
		display flex
	&-Schedule, &-Phone
		font-family Roboto
		font-size 14px
		color #4F4F4F
	&-Phone
		margin-right: 30px
.Brands
	padding 10px 0
	&-Element
		padding 10px 0 10px 10px
		&:nth-child(odd)
			background-color #f2f2f2
	&-Info
		display flex
	&-Address
		cursor pointer
		font-family Roboto
		font-size 14px
		color #4F4F4F
	&-Schedule, &-Phone
		font-family Roboto
		font-size 11px
		color #4F4F4F
		&_Wrap
			margin-right 50px
			font-family Roboto
			font-size 11px
			color #BDBDBD


#DescMap
	display flex
	flex-direction column-reverse
	justify-content flex-end